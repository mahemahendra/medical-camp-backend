# Database
DATABASE_URL=postgresql://user:password@localhost:5432/medical_camp_db

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# External Services (placeholders - integrate real services)
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_API_KEY=your-whatsapp-api-key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
# To get your Telegram Bot Token:
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot and follow the instructions
# 3. Copy the token and paste it here
# Example: TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Test Chat ID (for development testing)
# Get your chat ID: Message your bot, then visit:
# https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
# Look for "chat":{"id":123456789} in the response
TELEGRAM_TEST_CHAT_ID=your-chat-id-here
# Example: TELEGRAM_TEST_CHAT_ID=123456789

# Backend URL (for attachment URLs and QR code links)
BACKEND_URL=http://localhost:3000

# Frontend URL (for CORS and QR code links)
FRONTEND_URL=http://localhost:5173
